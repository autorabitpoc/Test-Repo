            <operation>equals</operation>
            <value>Mass</value>
        </criteriaItems>
        <criteriaItems>
            <field>Service_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>GFRA - Adjustment</value>
        </criteriaItems>
        <criteriaItems>
            <field>Service_Request__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Service_Request__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>GFRA_Final_Approval_Stage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>GFRA_Final_Approver_Name</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>GFRA_Request_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>History_Tracking_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
