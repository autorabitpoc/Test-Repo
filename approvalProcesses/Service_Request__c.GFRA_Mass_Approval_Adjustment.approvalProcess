                <value>Mass</value>
            </criteriaItems>
            <criteriaItems>
                <field>Service_Request__c.RecordType</field>
                <operation>equals</operation>
                <value>GFRA - Adjustment</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>GFRA Mass adj Request for Approval Process</label>
