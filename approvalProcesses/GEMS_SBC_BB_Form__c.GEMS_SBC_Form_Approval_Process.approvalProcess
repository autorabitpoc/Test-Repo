            <name>Set_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_status_to_Revision_Requested</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_Approval_Status_to_Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_status_to_Internal_Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>GEMS_SBC_Form_Approval_Process</label>
    <recallActions>
