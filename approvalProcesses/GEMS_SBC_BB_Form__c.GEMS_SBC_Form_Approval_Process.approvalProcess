    </approvalStep>
    <emailTemplate>Request_Form/GEMS_SBC_Internal_Approval_Pending</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(OR(TEXT(Form_Status__c)=&apos;New&apos;,TEXT(Form_Status__c)=&apos;In Progress&apos;,TEXT(Form_Status__c)=&apos;Internal Approval Rejected&apos;,TEXT(Form_Status__c)=&apos;Revision Requested&apos;),TEXT(Form_Request_Type__c)=&apos;Custom SBC&apos;,RecordType.DeveloperName=&apos;GEMS_SBC_Form&apos;,!ISNULL(CBDM_Request_Trans_Id__c),!ISBLANK(CBDM_Request_Trans_Id__c))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>SBC_Approval_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
