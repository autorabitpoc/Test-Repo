<!-- Component based on Peter Knolle's code from http://peterknolle.com/file-upload-lightning-component/ -->
<aura:component controller="ProspectingAppUploadAttachmentController">
    <aura:attribute name="parentId" type="Id"/>
    
    <aura:registerEvent name="uploadFinished" type="c:PROSPECTING_APP_FILE_UPLOAD_DONE_EVT"/>
    <aura:registerEvent name="uploadRestOfFile" type="c:PROSPECTING_APP_DUMMY_EVT"/>
    <aura:handler name="uploadFinished" event="c:PROSPECTING_APP_FILE_UPLOAD_DONE_EVT" action="{!c.showSuccess}"/>
    
    <div role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <div class="slds-modal__header">
                <button class="slds-button slds-modal__close slds-button--icon-inverse" onclick="{!c.close}" title="Close">
                    <lightning:icon iconName="utility:close" size="small" alternativeText="Close"/>
                    <span class="slds-assistive-text">Close</span>
                </button>
                <h2 id="header43" class="slds-text-heading--medium">Upload Attachment</h2>
            </div>
            <div class="slds-modal__content slds-p-around--medium">
                <div>
                    <div class="slds-scrollable--y">
                        <div class="slds-grid">
                            <div class="slds-col slds-size--2-of-2">
                                <div class="slds-file-selector">
                                    <input aura:id="file" class="file slds-file-selector__input slds-assistive-text" type="file" id="file-upload-input-01" aria-describedby="file-selector-id" />
                                    <label class="slds-file-selector__body" for="file-upload-input-01">
                                        <span class="slds-file-selector__button slds-button slds-button--neutral" style="cursor:pointer;">
                                            <lightning:icon iconName="utility:upload" size="x-small" alternativeText="Upload File" />
                                            &nbsp; Choose File to Upload</span>
                                    </label>
                                </div>
                                
                                <div aura:id="uploading" class="slds-hide">
                                    <img src="/resource/loading_gif" alt="uploading" class="small-spinner"/> Uploading...
                                </div>
                                <div aura:id="uploadSuccess" class="slds-hide slds-m-top--xx-small">
									File uploaded successfully                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="slds-modal__footer">
                <button class="slds-button slds-button--neutral" onclick="{!c.close}">Close</button>
                <button class="slds-button slds-button--brand" onclick="{!c.save}">Upload</button>
            </div>
        </div>
    </div>
    
    <div class="slds-backdrop slds-backdrop--open"></div>
</aura:component>