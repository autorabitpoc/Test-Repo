<aura:component implements="force:appHostable,force:lightningQuickActionWithoutHeader,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global" controller= "SGR_AdditonalInputRequiredButton">
	<aura:attribute name="Case" type="Object" 
                    description="A simplified view record object to be displayed"/>
    <aura:attribute name="recordError" type="String" 
                    description="An error message bound to force:recordData"/>
    
    <force:recordData aura:id="recordId"
                      recordId="{!v.recordId}"
                      layoutType="Full"
                      targetFields="{!v.Case}"
                      targetError="{!v.recordError}"
                      targetRecord="{!v.record}"/> 
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
</aura:component>