<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
	<aura:attribute name="record" type="Object"/>
    <aura:attribute name="simpleRecord" type="Object"/>
    <aura:attribute name="recordError" type="String"/>
    <aura:attribute name="iconName" type="String" required="true" default="standard:home"/>
    <aura:attribute name="objName" type="String" required="true" default="Gate" />
    
    <force:recordData aura:Id="recordLoader"
                      recordId="{!v.recordId}"     
                      layoutType="FULL"
                      targetRecord="{!v.record}"
                      targetFields="{!v.simpleRecord}"
                      targetError="{!v.recordError}"
                      recordUpdated="{!c.handleRecordUpdated}"
                      
                      />
    <aura:if isTrue="{!not(empty(v.recordError))}">
        <div class="recordError">
            <ui:message title="Error" severity="error" closable="true">
                {!v.recordError}
            </ui:message>
        </div>
    </aura:if>
    
    <!-- PAGE HEADER -->
    <lightning:layout class="s1FixedTop forceHighlightsStencilDesktop slds-page-header slds-page-header--object-home">
        <lightning:layoutItem >
            <lightning:icon iconName="custom:custom45" alternativeText=""/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-breadcrumb__item">{!v.objName}</h1>
                <h2 class="slds-page-header__title slds-m-right--small slds-truncate slds-align-middle">{!v.simpleRecord.Name}</h2>
            </div>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small" alignmentBump="left">
            <!-- buttons go here-->
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / PAGE HEADER -->
       
    <lightning:layout class="slds-page-header slds-page-header__detail-row">
        <lightning:layoutItem padding="around-small">
                <div class="header-column">
                    <p class="field-title" title="Field 3">Field 3</p>
                    <a href="#">Website</a>
                </div>
            </lightning:layoutItem>
    </lightning:layout>
</aura:component>