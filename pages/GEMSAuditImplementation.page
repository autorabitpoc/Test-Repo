    <apex:form >
        <apex:pageBlock id="thePageBlock">
            <apex:actionRegion >
                <apex:pageBlockSection id="pbs1" title="Additional Details" columns="2"> 
                    <apex:inputField value=" {!Case.GEMS_Implementation_Audit_Required__c}">
                        <apex:actionSupport event="onchange" reRender="thePageBlock" status="status"/>
                    </apex:inputField>
                  </apex:pageBlockSection>
            </apex:actionRegion>
                <apex:pageBlockSection id="Section" columns="2"  collapsible="false" rendered="{!Case.GEMS_Implementation_Audit_Required__c==true}"> 
                    <apex:inputField value="{!Case.GEMS_Auditor__c}"/>
