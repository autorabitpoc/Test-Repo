                    <apex:inputField value="{!Case.GEMS_Date_Audit_Agreement_Issued__c}"/>
                    <apex:inputField value="{!Case.GEMS_Date_Audit_Agreement_Signed__c}"/>
                    <apex:inputField value="{!Case.GEMS_Audit_Claims_Scenarios_Provided_by__c}"/>
                    <apex:inputField value="{!Case.GEMS_Private_Exchange__c}"/>
                    <apex:inputField value="{!Case.GEMS_Implementation_Audit_Types__c}"/>
                    <apex:inputField value="{!Case.GEMS_Status_of_Audit_Claim_Scenarios__c}"/>
                    <apex:inputField value="{!Case.GEMS_Audit_Status__c}"/>
                    <apex:inputField value="{!Case.GEMS_Account_Copied_into_Test_Region__c}"/>
                    <apex:inputField value="{!Case.GEMS_Dummy_Membership__c}"/>
                    <apex:inputField value="{!Case.GEMS_Audit_Testing_Platform__c}"/>
                </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>