    <script>
        function BackToAccount(){
            window.open("/" + "{!accountid}", "_top");
        }
        
        function showDisplayMessage(){
               $("#SuccessMsgPanel").show();
               $("#PopUpMesg").hide();
               setTimeout(function(){ 
                    $("#SuccessMsgPanel").hide();
               }, 5000);
               window.open("/" + "{!accountid}", "_top");
          }
    
         function showPopUp(){
          gotoPopUp();
         }
          function InvokeReserveAcctCallout(){
              callout();
          }
          function closePopUp1(){
             $("#PopUp1").hide();
             callClosePopUp();
          }
        
       function closePopUp2(){
             $("#PopUp2").hide();
             callClosePopUp();
        }
    </script>
    
